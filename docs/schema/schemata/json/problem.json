{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "type": [
    "object"
  ],
  "definitions": {
    "problem": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "Problem",
      "description": "外国人訪問者の困りごとを投稿，閲覧するAPI",
      "stability": "prototype",
      "strictProperties": true,
      "type": [
        "object"
      ],
      "definitions": {
        "id": {
          "description": "unique identifier of problem",
          "readOnly": true,
          "example": 1,
          "type": [
            "integer"
          ]
        },
        "comment": {
          "description": "problem's comment",
          "example": "SOX is difficult",
          "type": [
            "string"
          ]
        },
        "japanese_comment": {
          "description": "translated problem's comment(japanese)",
          "example": "SOXは難しい",
          "type": [
            "string"
          ]
        },
        "image_url": {
          "description": "stored image url",
          "example": "/uploads/problem/image/1/20170609002537.jpg",
          "type": [
            "string"
          ]
        },
        "image_url_null": {
          "description": "stored image url",
          "example": null,
          "type": [
            "string"
          ]
        },
        "thumbnail_url": {
          "description": "stored thumbnail url",
          "example": "/uploads/problem/image/1/thumb_20170609002537.jpg",
          "type": [
            "string"
          ]
        },
        "latitude": {
          "description": "latitude",
          "example": 36.10830528664971,
          "type": [
            "number"
          ]
        },
        "longitude": {
          "description": "longitude",
          "example": 140.10114337330694,
          "type": [
            "number"
          ]
        },
        "user_id": {
          "description": "user's id",
          "example": 1,
          "type": [
            "integer"
          ]
        },
        "responded": {
          "description": "Indicate whether a reply is necessary",
          "example": true,
          "type": [
            "boolean"
          ]
        },
        "responded_false": {
          "description": "Indicate whether a reply is necessary",
          "example": false,
          "type": [
            "boolean"
          ]
        },
        "responses_seen": {
          "description": "This indicates that it is a already read response",
          "example": true,
          "type": [
            "boolean"
          ]
        },
        "responses_seen_false": {
          "description": "This indicates that it is a already read response",
          "example": false,
          "type": [
            "boolean"
          ]
        },
        "page": {
          "description": "Parameter that specifies the page (for pagenation)",
          "example": 1,
          "type": [
            "integer"
          ]
        },
        "per": {
          "description": "Parameter that specifies the number of data per page",
          "example": 5,
          "type": [
            "integer"
          ]
        },
        "identity": {
          "anyOf": [
            {
              "$ref": "#/definitions/problem/definitions/id"
            }
          ]
        },
        "created_at": {
          "description": "when problem was created",
          "format": "date-time",
          "example": "2017-06-30T15:41:41.767+09:00",
          "type": [
            "string"
          ]
        },
        "updated_at": {
          "description": "when problem was updated",
          "format": "date-time",
          "example": "2017-06-30T15:41:41.767+09:00",
          "type": [
            "string"
          ]
        }
      },
      "links": [
        {
          "description": "困りごとを投稿するAPI　利用するにはアクセストークンをヘッダに付ける必要あり.",
          "href": "/v1/problems",
          "method": "POST",
          "rel": "create",
          "schema": {
            "properties": {
              "comment": {
                "$ref": "#/definitions/problem/definitions/comment"
              },
              "japanese_comment": {
                "$ref": "#/definitions/problem/definitions/japanese_comment"
              },
              "latitude": {
                "$ref": "#/definitions/problem/definitions/latitude"
              },
              "longitude": {
                "$ref": "#/definitions/problem/definitions/longitude"
              }
            },
            "type": [
              "object"
            ]
          },
          "targetSchema": {
            "properties": {
              "id": {
                "$ref": "#/definitions/problem/definitions/id"
              },
              "comment": {
                "$ref": "#/definitions/problem/definitions/comment"
              },
              "japanese_comment": {
                "$ref": "#/definitions/problem/definitions/japanese_comment"
              },
              "image_url": {
                "$ref": "#/definitions/problem/definitions/image_url"
              },
              "thumbnail_url": {
                "$ref": "#/definitions/problem/definitions/thumbnail_url"
              },
              "latitude": {
                "$ref": "#/definitions/problem/definitions/latitude"
              },
              "longitude": {
                "$ref": "#/definitions/problem/definitions/longitude"
              },
              "user_id": {
                "$ref": "#/definitions/problem/definitions/user_id"
              },
              "responded": {
                "$ref": "#/definitions/problem/definitions/responded_false"
              },
              "responses_seen": {
                "$ref": "#/definitions/problem/definitions/responses_seen"
              },
              "created_at": {
                "$ref": "#/definitions/problem/definitions/created_at"
              },
              "updated_at": {
                "$ref": "#/definitions/problem/definitions/updated_at"
              }
            }
          },
          "http_header": {
            "Authorization": "1:ABCDabcd"
          },
          "title": "Create"
        },
        {
          "description": "ログインしているユーザの投稿した困りごとを全件取得する(降順). クエリパラメータ(page,per)を指定することで取得する件数を変更できる. (例：/v1/problems?page=2&per=3 １ページあたり３件ずつの２ページ目を取得する) (例：/v1/problems?page=1 このように、ページのみ指定した場合は1ページあたり5件取得） 利用するにはアクセストークンをヘッダに付ける必要あり.",
          "href": "/v1/problems/me",
          "method": "GET",
          "rel": "instances",
          "schema": {
            "properties": {
              "page": {
                "$ref": "#/definitions/problem/definitions/page"
              },
              "per": {
                "$ref": "#/definitions/problem/definitions/per"
              }
            },
            "type": [
              "object"
            ]
          },
          "title": "Me",
          "http_header": {
            "Authorization": "1:ABCDabcd"
          }
        },
        {
          "description": "投稿されている困りごとを全件取得する（全ユーザが対象, 降順）. クエリパラメータ(page,per)を指定することで取得する件数を変更できる. (例：/v1/problems?page=2&per=3 １ページあたり３件ずつの２ページ目を取得する) (例：/v1/problems?page=1 このように、ページのみ指定した場合は1ページあたり5件取得） 利用するにはアクセストークンをヘッダに付ける必要あり.",
          "href": "/v1/problems",
          "method": "GET",
          "rel": "instances",
          "schema": {
            "properties": {
              "page": {
                "$ref": "#/definitions/problem/definitions/page"
              },
              "per": {
                "$ref": "#/definitions/problem/definitions/per"
              }
            },
            "type": [
              "object"
            ]
          },
          "title": "List",
          "http_header": {
            "Authorization": "1:ABCDabcd"
          }
        },
        {
          "description": "指定したidの困りごとを1件取得する.利用するにはアクセストークンをヘッダに付ける必要あり.",
          "href": "/v1/problems/{id}",
          "method": "GET",
          "rel": "self",
          "type": [
            "object"
          ],
          "title": "Show",
          "http_header": {
            "Authorization": "1:ABCDabcd"
          }
        },
        {
          "description": "指定したidの困りごとを1件削除する.困りごとに関連した返信も一緒に削除される.利用するには、困りごとを投稿したユーザのアクセストークンをヘッダに付ける必要あり.",
          "href": "/v1/problems/{id}",
          "method": "DELETE",
          "rel": "empty",
          "title": "Destroy",
          "http_header": {
            "Authorization": "1:ABCDabcd"
          }
        }
      ],
      "properties": {
        "id": {
          "$ref": "#/definitions/problem/definitions/id"
        },
        "comment": {
          "$ref": "#/definitions/problem/definitions/comment"
        },
        "japanese_comment": {
          "$ref": "#/definitions/problem/definitions/japanese_comment"
        },
        "image_url": {
          "$ref": "#/definitions/problem/definitions/image_url"
        },
        "thumbnail_url": {
          "$ref": "#/definitions/problem/definitions/thumbnail_url"
        },
        "latitude": {
          "$ref": "#/definitions/problem/definitions/latitude"
        },
        "longitude": {
          "$ref": "#/definitions/problem/definitions/longitude"
        },
        "user_id": {
          "$ref": "#/definitions/problem/definitions/user_id"
        },
        "responded": {
          "$ref": "#/definitions/problem/definitions/responded"
        },
        "responses_seen": {
          "$ref": "#/definitions/problem/definitions/responses_seen"
        },
        "created_at": {
          "$ref": "#/definitions/problem/definitions/created_at"
        },
        "updated_at": {
          "$ref": "#/definitions/problem/definitions/updated_at"
        }
      }
    }
  },
  "properties": {
    "problem": {
      "$ref": "#/definitions/problem"
    }
  },
  "title": "API JSON Schema",
  "description": "In this schema file, we represents the public interface of Sample API in JSON Hyper Schema draft v4.",
