{
  "$schema": "http://interagent.github.io/interagent-hyper-schema",
  "type": [
    "object"
  ],
  "definitions": {
    "user": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "FIXME - User",
      "description": "FIXME",
      "stability": "prototype",
      "strictProperties": true,
      "type": [
        "object"
      ],
      "definitions": {
        "user_id": {
          "description": "unique identifier of user",
          "example": "18",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "email": {
          "description": "unique email of user",
          "example": "test@example.com",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "password": {
          "description": "passwordof user",
          "example": "example",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "name": {
          "description": "unique name of user",
          "example": "Wataru Sakamoto",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "gender": {
          "description": "gender of user",
          "example": "male",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "age": {
          "description": "age range of user",
          "example": "20",
          "readOnly": true,
          "type": [
            "integer"
          ]
        },
        "nationality": {
          "description": "nationality of user",
          "example": "Japan",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "image": {
          "description": "image of the user",
          "example": "image.jp",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "token_type": {
          "description": "token type for user",
          "example": "Bearer",
          "readOnly": true,
          "type": [
            "-string"
          ]
        },
        "access_token": {
          "description": "Authozation Key",
          "Example": "10:e_sq2en-VGzaixCQ-_Fk",
          "type": [
            "string"
          ]
        },
        "identity": {
          "anyOf": [
            {
              "$ref": "#/definitions/user/definitions/id"
            },
            {
              "$ref": "#/definitions/user/definitions/name"
            }
          ]
        },
        "created_at": {
          "description": "when user was created",
          "format": "date-time",
          "type": [
            "string"
          ]
        },
        "updated_at": {
          "description": "when user was updated",
          "format": "date-time",
          "type": [
            "string"
          ]
        }
      },
      "links": [
        {
          "description": "Create a new user.",
          "href": "/v1/users",
          "method": "POST",
          "rel": "create",
          "targetSchema": {
            "properties": {
              "email": {
                "$ref": "#/definitions/user/definitions/email"
              },
              "token_type": {
                "$ref": "#/definitions/user/definitions/token_type"
              },
              "user_id": {
                "$ref": "#/definitions/user/definitions/user_id"
              },
              "access_token": {
                "$ref": "#/definitions/user/definitions/access_token"
              }
            }
          },
          "schema": {
            "properties": {
              "email": {
                "$ref": "#/definitions/user/definitions/email"
              },
              "password": {
                "$ref": "#/definitions/user/definitions/password"
              },
              "name": {
                "$ref": "#/definitions/user/definitions/name"
              },
              "gender": {
                "$ref": "#/definitions/user/definitions/gender"
              },
              "age": {
                "$ref": "#/definitions/user/definitions/age"
              },
              "nationality": {
                "$ref": "#/definitions/user/definitions/nationality"
              },
              "image": {
                "$ref": "#/definitions/user/definitions/image"
              }
            },
            "required": [
              "email",
              "password"
            ],
            "type": [
              "object"
            ],
            "title": "Create"
          }
        },
        {
          "description": "Get information of login user.",
          "href": "/v1/users/me",
          "method": "GET",
          "rel": "self",
          "http_header": {
            "authorization": "EXAMPLE-HEADER"
          },
          "targetSchema": {
            "properties": {
              "email": {
                "$ref": "#/definitions/user/definitions/email"
              },
              "password": {
                "$ref": "#/definitions/user/definitions/password"
              },
              "name": {
                "$ref": "#/definitions/user/definitions/name"
              },
              "gender": {
                "$ref": "#/definitions/user/definitions/gender"
              },
              "age": {
                "$ref": "#/definitions/user/definitions/age"
              },
              "nationality": {
                "$ref": "#/definitions/user/definitions/nationality"
              },
              "image": {
                "$ref": "#/definitions/user/definitions/image"
              }
            },
            "type": [
              "object"
            ],
            "title": "Me"
          }
        }
      ],
      "properties": {
        "Authorization Key": {
          "$ref": "#/definitions/user/definitions/access_token"
        }
      }
    }
  },
  "properties": {
    "user": {
      "$ref": "#/definitions/user"
    }
  }
}
