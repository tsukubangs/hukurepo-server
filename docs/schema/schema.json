          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "password": {
          "description": "password of user",
          "example": "example",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "name": {
          "description": "unique name of user",
          "example": "Wataru Sakamoto",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "gender": {
          "description": "gender of user",
          "example": "male",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "age": {
          "description": "age range of user",
          "example": 20,
          "readOnly": true,
          "type": [
            "integer"
          ]
        },
        "nationality": {
          "description": "nationality of user",
          "example": "Japan",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "image": {
          "description": "image of the user",
          "example": "image.jp",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "token_type": {
          "description": "token type for user",
          "example": "Bearer",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "access_token": {
          "description": "unique token for user",
          "example": "1:ABCDabcd",
          "readOnly": true,
          "type": [
            "string"
