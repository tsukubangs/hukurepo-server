<table class="table table-striped table-responsive table-hover">
      <thead>
        <tr class="table-success">
          <th>年齢層</th>
          <th>性別</th>
          <th>居住国</th>
          <th>コメント</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @all_problems.each do |problem| %>
        <tr>
          <td><%= problem.user.age %></td>
          <td><%= problem.user.gender %></td>
          <td><%= problem.user.country_of_residence %></td>
          <td class="comment-table"><%= problem.japanese_comment %></td>
          <td>
            <a class="btn">詳細</a>
          </td>
        </tr>
        <% end %>
      </tbody>
</table>
